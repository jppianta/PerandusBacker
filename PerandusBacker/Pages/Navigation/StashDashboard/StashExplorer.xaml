<Page
  x:Class="PerandusBacker.Pages.Navigation.StashDashboard.StashExplorer"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:PerandusBacker.Pages.Navigation.StashDashboard"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  xmlns:toolkit="using:CommunityToolkit.WinUI.UI.Controls"
  xmlns:brushes="using:CommunityToolkit.WinUI.UI.Media"
  mc:Ignorable="d"
  Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition
        Height="*" />
    </Grid.RowDefinitions>
    <TabView
      TabItemsSource="{x:Bind Tabs, Mode=OneWay}"
      x:Name="TabControl"
      IsAddTabButtonVisible="False"
      CanReorderTabs="True" />
    <toolkit:Loading
      x:Name="LoadingControl"
      Foreground="{ThemeResource SystemAccentColor}"
      Grid.Row="1">
      <toolkit:Loading.Background>
        <brushes:AcrylicBrush
          TintColor="{ThemeResource SystemAccentColor}"
          TintOpacity="0.1"
          BlurAmount="16.23" />
      </toolkit:Loading.Background>
      <ProgressRing
        IsActive="True"
        Height="50"
        Width="50" />
    </toolkit:Loading>
  </Grid>
</Page>
